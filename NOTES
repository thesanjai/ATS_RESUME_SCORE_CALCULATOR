python3 -m venv {env_name} #for creating a virtual environment

source {env_name}/bin/activate  # to activate the environment 

pip install poetry # to track the details of the projet and the packages and dependecies used in this project

poetry init #fill the details

#add the dependecies

poetry add flask sentence-transformers pymupdf scikit-learn


